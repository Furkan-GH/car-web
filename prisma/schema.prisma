generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CarStatus {
  NONE
  BARRIER
  WATERTANK
  FAN
  CAMERA
  FINISH
}

enum BarrierStatus {
  NONE
  SLOW
  MID
  FAST
}

model WashedCar {
  id String @id @default(cuid())
  status CarStatus @default(NONE)
  barrierStatus BarrierStatus @default(NONE)
  data SensorData[]
  createdDate DateTime @default(now()) 
}

model SensorData {
  id            String    @id @default(cuid())
  name          String
  sensorData  Json?
  washedCarId String
  washedCar WashedCar @relation(fields: [washedCarId],references: [id],onDelete:Cascade)
}
